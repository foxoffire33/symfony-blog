<!-- Top Bar Nav -->
<nav class="w-full py-4 bg-blue-800 shadow">
    <div class="w-full container mx-auto flex flex-wrap items-center justify-between">

        <nav>
            <ul class="flex items-center justify-between font-bold text-sm text-white uppercase no-underline">
                {% if(app.user) %}
                    <li><a class="hover:text-gray-200 hover:underline px-4" href="{{ url('app_logout') }}">Logout</a>
                    </li>
                {% endif %}
            </ul>
        </nav>

        <div class="flex items-center text-lg no-underline text-white pr-6 text-bold">
            {% if(app.user) %}
                {{ 'common.AuthenticatedAsUser'|trans({'userEmail': app.user.email},'common') }}
            {% else %}
                <a class="hover:text-gray-200 hover:underline px-4"
                   href="{{ url('app_login') }}">{{ 'common.login'|trans({},'common') }}</a>
                <a class="hover:text-gray-200 hover:underline px-4"
                   href="{{ url('app_register') }}">{{ 'common.register'|trans({},'common') }}</a>
            {% endif %}
        </div>
    </div>

